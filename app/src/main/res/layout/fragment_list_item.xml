<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">


        <TextView
            android:id="@+id/name_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:text="Bob scored:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_item_text_view" />

        <TextView
            android:id="@+id/course_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="The course"
            app:layout_constraintStart_toEndOf="@+id/date_item_text_view"
            app:layout_constraintTop_toTopOf="@+id/date_item_text_view" />

        <TextView
            android:id="@+id/date_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th April 2020"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="86"
            app:layout_constraintStart_toEndOf="@+id/name_item_text_view"
            app:layout_constraintTop_toTopOf="@+id/name_item_text_view" />

        <TextView
            android:id="@+id/par_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Par of 72"
            app:layout_constraintStart_toEndOf="@+id/course_item_text_view"
            app:layout_constraintTop_toTopOf="@+id/course_item_text_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>