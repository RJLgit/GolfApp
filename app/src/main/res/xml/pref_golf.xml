<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:key="time_filter_preference"
        android:title="Date range"
        android:entries="@array/time_filter_array"
        android:entryValues="@array/time_filter_array"
        android:summary="%s"
        android:defaultValue="All rounds"
        />

        <MultiSelectListPreference
            android:key="player_filter_preference"
            android:title="Select players"
            app:defaultValue="@array/player_filter_array"
            android:entries="@array/player_filter_array"
            android:entryValues="@array/player_filter_array"
            android:defaultValue="Bob" />

    <ListPreference
        android:key="sort_preference"
        android:title="Sort by"
        android:entries="@array/sort_array"
        android:entryValues="@array/sort_array"
        android:summary="%s"
        android:defaultValue="Date"
        />

</PreferenceScreen>